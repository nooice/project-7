      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Skills
        ul
          each skill in profile.skills
            li #{skill}
        h6 Contact Info
        ul
          li #{profile.phone}
          li #{profile.email}
        a.button.expanded(href=`${profile.linkedIn}`) LinkedIn
        a.button.expanded(href=`${profile.gitHub}`) GitHub
        a.button.expanded(href=`${profile.twitter}`) Twitter
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ← Back
  