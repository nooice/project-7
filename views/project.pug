extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9
        h1 #{project.title}
        p.lead.text-light
          | #{project.description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies
        ul
          each language in project.tech
            li #{language}
        a.button.expanded(href=`${project.demo}`) Live Demo
        a.button.expanded(href=`${project.gitRepo}`) GitHub Repo
    img.image(src=`${project.img1}`)
    img.image(src=`${project.img2}`)
    img.image(src=`${project.img3}`)